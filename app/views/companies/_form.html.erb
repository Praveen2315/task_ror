
<%= form_with model:@company do|form| %>
      <div>
        <%= form.label :name %><br>
        <%= form.text_field :name %>
        <% @company.errors.full_messages_for(:name).each do |message| %>
            <div><%= message %></div>
          <% end %>
      </div>
  
      <div>
        <%= form.label :location %><br>
        <%= form.text_field :location %>
        <% @company.errors.full_messages_for(:location).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
  
      <div>
        <%= form.label :technology %><br>
        <%= form.text_field :technology %>
        <% @company.errors.full_messages_for(:technology).each do |message| %>
          <div><%= message %></div>
         <% end %>  
      </div>

      <div>
        <%= form.submit %>
      </div>
  <% end %>
  