<p><%= notice %></p>

<h1>listing user </h1>
<%= link_to 'New user', new_user_path %>
<table>
  <thead>
     <tr>
         <th>Name</th>
         <th>Email id</th>
         <th>Phone no</th>
         
         <th colspan="3">Actions</th>
     </tr>
   </thead>
   <tbody>
     <% @users.each do |user| %>
      <tr>
        <td><%= user.name%></td>
        <td><%= user.email_id %></td>
        <td><%= user.phone_no %></td>

        <td><%= link_to 'View' , user %></td>
        <td><%= link_to 'Edit' , edit_user_path(user) %></td>
        <td><%= link_to "Destroy", user, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td> </tr> 
      <% end %>
    </tbody>
</table> 